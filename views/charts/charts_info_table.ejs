<div class="container">
    <div class="page-header">
        <h3>已添加圖表</h3>
    </div>
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>類型</th>
                <th>標題</th>
                <th>日期</th>
                <th>詳細資料</th>
                <th>刪除</th>
            </tr>
        </thead>
        <tbody>
            <%chartData.forEach(function (data) {%>
                <tr>
                    <% if(data.Type=='圓餅圖'){%>
                        <form action="/chart/draw" method="post">
                            <td><h4><input type="text" class="hidden" name="type" value=<%=data.Type%>><%=data.Type%></h4></td>
                            <td><h4><input type="text" class="hidden" name="title" value=<%=data.Title%>><%=data.Title%></h4></td>
                            <td><h4><input type="text" class="hidden" name="date" value=<%=data.Date%>><%=data.Date%></h4></td>
                            <td><input type="text" class="hidden" name="items" value=<%=data.items%>>
                                <input type="text" class="hidden" name="numbers" value=<%=data.numbers%>>
                                <input type="text" class="hidden" name="sum" value=<%=data.Sum%>>
                                <input type="submit" class="btn btn-info" value="前往">
                            </td>
                        </form>
                    <%}else if(data.Type=='長條圖'){%>

                    <%}else if(data.Type=='區域圖'){%>
                        <form action="/chart/draw" method="post">
                            <td><h4><input type="text" class="hidden" name="type" value=<%=data.Type%>><%=data.Type%></h4></td>
                            <td><h4><input type="text" class="hidden" name="title" value=<%=data.Title%>><%=data.Title%></h4></td>
                            <td><h4><input type="text" class="hidden" name="date" value=<%=data.Date%>><%=data.Date%></h4></td>
                            <td><input type="text" class="hidden" name="period" value=<%=data.Period%>>
                                <input type="text" class="hidden" name="items" value=<%=data.items%>>
                                <input type="text" class="hidden" name="numbers_income" value=<%=data.numbers_income%>>
                                <input type="text" class="hidden" name="numbers_cost" value=<%=data.numbers_cost%>>
                                <input type="submit" class="btn btn-info" value="前往">
                            </td>
                        </form>
                    <%}else if(data.Type=='表單'){%>

                    <% }%>
                    <form action="/chart/removeData" method="post">
                        <input type="text" class="hidden" name="id" value=<%=data._id%>>
                        <td><input type="submit" class="btn btn-danger" value="X"></td>
                    </form>
                </tr>
            <%})%>
        </tbody>
    </table>
    <br>
    <hr>
    <br>
    <% include start_chart_modal.ejs %>
</div>