<div class="container">
    <% if(products.length==0){%>
        <div class="well well-lg"><h4 class="text-center">尚未登入商品</h4></div>
    <%}else{%>
        <div class="row">
            <div class="well">
                <h1 class="text-center">商品一覽</h1>
                <div class="list-group">
                    <% products.forEach(function (data) {%>
                        <a href="#" class="list-group-item">
                            <div class="media col-md-3">
                                <figure class="pull-left">
                                    <img class="media-object img-rounded img-responsive img-min-height-width-100" width="350" height="250" src="http://localhost:3000/uploads/<%=data.vendorName%>/<%=data.image%>" >
                                </figure>
                            </div>
                            <div class="col-md-6">
                                <h3 class="list-group-item-heading"><%=data.product_name%>(<%=data.price%>$)</h3>
                                <p class="list-group-item-text"><%=data.introduction%></p>
                            </div>
                            <div class="col-md-3 text-center">
                                <h2> 14240 <small> votes </small></h2>
                                <button type="button" class="btn btn-primary btn-lg btn-block"> Vote Now! </button>
                                <div class="stars">
                                    <span class="glyphicon glyphicon-star"></span>
                                    <span class="glyphicon glyphicon-star"></span>
                                    <span class="glyphicon glyphicon-star"></span>
                                    <span class="glyphicon glyphicon-star"></span>
                                    <span class="glyphicon glyphicon-star-empty"></span>
                                </div>
                                <p> Average 4.5 <small> / </small> 5 </p>
                            </div>
                        </a>
                    <%}) %>
                </div>
            </div>
        </div>
    <%} %>
</div>